{
  "compilerOptions": {
    "types": ["node"],
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "baseUrl": "src", // This tells TypeScript/JavaScript to resolve modules relative to the 'src' directory.
    "paths": {
      "@app/*": ["app/*"], // Alias for the 'app' layer
      "@pages/*": ["pages/*"], // Alias for the 'pages' layer
      "@widgets/*": ["widgets/*"], // Alias for the 'widgets' layer
      "@features/*": ["features/*"], // Alias for the 'features' layer
      "@entities/*": ["entities/*"], // Alias for the 'entities' layer
      "@shared/*": ["shared/*"] // Alias for the 'shared' layer
    },
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": false,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "isolatedModules": false,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": false,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "include": ["src"]
}
